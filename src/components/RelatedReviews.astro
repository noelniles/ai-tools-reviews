---
import { getCollection } from 'astro:content';
import RatingStars from './RatingStars.astro';

interface Props {
  currentSlug: string;
  tags?: string[];
  limit?: number;
}

const { currentSlug, tags = [], limit = 3 } = Astro.props;

const allReviews = await getCollection('reviews');

const related = allReviews
  .filter(review => review.slug !== currentSlug)
  .map(review => {
    const commonTags = tags.filter(tag => review.data.tags?.includes(tag));
    return {
      review,
      score: commonTags.length
    };
  })
  .filter(item => item.score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, limit)
  .map(item => item.review);
---

{related.length > 0 && (
  <div class="related-reviews my-12 p-6 rounded-sm bg-slate-900/40 border border-slate-800">
    <h3 class="text-xl font-bold mb-6 text-slate-100 flex items-center gap-2">
      <svg class="w-5 h-5 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      Related Reviews
    </h3>
    
    <div class="grid gap-4 md:grid-cols-3">
      {related.map(review => (
        <a 
          href={`/reviews/${review.slug}`}
          class="group block p-4 rounded-sm bg-slate-800/40 border border-slate-700 hover:border-brand/50 transition-all hover:transform hover:scale-105"
        >
          <div class="space-y-3">
            <div class="flex items-start justify-between gap-2">
              <h4 class="font-semibold text-slate-200 group-hover:text-brand transition-colors line-clamp-2">
                {review.data.title}
              </h4>
            </div>
            
            <div class="flex items-center gap-2">
              <RatingStars score={review.data.rating.overall} size="sm" />
              <span class="text-sm font-semibold text-brand">{review.data.rating.overall}/10</span>
            </div>
            
            <p class="text-xs text-slate-400 line-clamp-2">
              {review.data.description}
            </p>
            
            <div class="flex items-center gap-2 text-xs text-brand">
              <span>Read Review</span>
              <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
)}
