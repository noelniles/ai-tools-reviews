---
interface Props {
  pros: string[]
  cons: string[]
}

const { pros, cons } = Astro.props
---

<div class="grid md:grid-cols-2 gap-6 my-8 not-prose">
  <div class="bg-green-500/5 border border-green-500/20 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-green-400 mb-4 flex items-center gap-2">
      <span class="text-2xl">✓</span>
      Pros
    </h3>
    <ul class="space-y-3">
      {pros.map((pro) => (
        <li class="flex items-start gap-3 text-slate-300">
          <span class="text-green-400 mt-1 flex-shrink-0">•</span>
          <span>{pro}</span>
        </li>
      ))}
    </ul>
  </div>
  
  <div class="bg-red-500/5 border border-red-500/20 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-red-400 mb-4 flex items-center gap-2">
      <span class="text-2xl">✗</span>
      Cons
    </h3>
    <ul class="space-y-3">
      {cons.map((con) => (
        <li class="flex items-start gap-3 text-slate-300">
          <span class="text-red-400 mt-1 flex-shrink-0">•</span>
          <span>{con}</span>
        </li>
      ))}
    </ul>
  </div>
</div>
