---
interface Props {
  testDate: string;
  sampleSize?: number;
  version?: string;
  testDuration?: string;
}

const { testDate, sampleSize, version, testDuration } = Astro.props;
---

<div class="inline-flex items-center gap-2 px-3 py-1.5 bg-slate-800/50 border border-slate-700 rounded-sm text-xs font-mono">
  <svg class="w-3 h-3 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
  </svg>
  <span class="text-slate-300">
    Tested: {new Date(testDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
    {version && ` • v${version}`}
    {sampleSize && ` • n=${sampleSize}`}
    {testDuration && ` • ${testDuration}`}
  </span>
</div>
