---
interface Props {
  toolName: string;
  discount: string;
  expiryDate?: string;
  dealUrl: string;
  code?: string;
}

const { toolName, discount, expiryDate, dealUrl, code } = Astro.props;
---

<div class="deal-banner my-8 p-6 rounded-xl bg-gradient-to-r from-green-500/20 via-blue-500/20 to-purple-500/20 border-2 border-green-500/40 shadow-lg shadow-green-500/10">
  <div class="flex flex-col md:flex-row items-center justify-between gap-4">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <span class="text-2xl">ðŸŽ‰</span>
        <span class="px-3 py-1 bg-green-500 text-white text-xs font-bold rounded-full uppercase">
          Exclusive Deal
        </span>
      </div>
      
      <h4 class="text-xl font-bold text-white mb-1">
        {discount} Off {toolName}
      </h4>
      
      <p class="text-sm text-slate-300">
        {expiryDate ? `Offer expires ${new Date(expiryDate).toLocaleDateString()}` : 'Limited time offer'}
      </p>
      
      {code && (
        <div class="mt-3 flex items-center gap-2">
          <span class="text-xs text-slate-400">Code:</span>
          <code class="deal-code px-3 py-1 bg-slate-900 border border-slate-700 rounded font-mono text-brand text-sm cursor-pointer hover:bg-slate-800 transition-colors">
            {code}
          </code>
          <button class="copy-code-btn text-xs text-slate-400 hover:text-brand transition-colors" data-code={code}>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </button>
        </div>
      )}
    </div>
    
    <a
      href={dealUrl}
      target="_blank"
      rel="noopener noreferrer sponsored"
      class="deal-link inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold rounded-lg transition-all transform hover:scale-105 shadow-xl"
      data-affiliate="true"
      data-tool={toolName}
      data-link-type="deal"
    >
      <span>Claim Deal</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
      </svg>
    </a>
  </div>
</div>

<script>
  // Copy code functionality
  document.querySelectorAll('.copy-code-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        try {
          await navigator.clipboard.writeText(code);
          const originalHTML = btn.innerHTML;
          btn.innerHTML = '<span class="text-green-400 text-xs">âœ“ Copied!</span>';
          setTimeout(() => {
            btn.innerHTML = originalHTML;
          }, 2000);
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'code_copied', {
              code: code,
              event_category: 'engagement',
            });
          }
        } catch (err) {
          console.error('Failed to copy code:', err);
        }
      }
    });
  });

  // Track deal clicks
  document.querySelectorAll('.deal-link').forEach(link => {
    link.addEventListener('click', () => {
      const toolName = link.getAttribute('data-tool');
      if (typeof gtag !== 'undefined' && toolName) {
        gtag('event', 'deal_clicked', {
          tool_name: toolName,
          link_type: 'deal',
          value: 5,
        });
      }
    });
  });
</script>

<style>
  .deal-banner {
    animation: glow 3s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      box-shadow: 0 0 10px rgba(34, 197, 94, 0.1);
    }
    to {
      box-shadow: 0 0 20px rgba(34, 197, 94, 0.2);
    }
  }
</style>
