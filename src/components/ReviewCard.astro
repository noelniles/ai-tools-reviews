---
import type { CollectionEntry } from 'astro:content'
import RatingStars from './RatingStars.astro'

interface Props {
  review: CollectionEntry<'reviews'>
}

const { review } = Astro.props
const href = `/reviews/${review.slug}`
---

<article class="border border-slate-800 rounded-xl p-4 hover:border-brand/70 transition-colors bg-slate-900/40">
  <a href={href} class="block space-y-2">
    <h2 class="text-lg font-semibold">{review.data.title}</h2>
    <p class="text-sm text-slate-300 line-clamp-2">{review.data.description}</p>
    <div class="flex items-center justify-between mt-3">
      <RatingStars score={review.data.rating.overall} />
      <span class="text-xs text-slate-500">
        {new Date(review.data.date).toLocaleDateString()}
      </span>
    </div>
  </a>
</article>
