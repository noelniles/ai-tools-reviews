---
interface ComparisonItem {
  name: string;
  slug: string;
  pricing: string;
  rating: number;
  features: {
    [key: string]: boolean | string;
  };
  affiliate?: string;
}

interface Props {
  tools: ComparisonItem[];
  features: string[];
  title?: string;
}

const { tools, features, title = "Feature Comparison" } = Astro.props;
---

<div class="comparison-table-wrapper my-12 overflow-x-auto">
  <div class="mb-6">
    <h3 class="text-2xl font-bold text-white">{title}</h3>
    <p class="text-sm text-slate-400 mt-2">Compare features side-by-side to find the best fit</p>
  </div>

  <table class="comparison-table w-full border-collapse">
    <thead>
      <tr class="bg-slate-900">
        <th class="sticky left-0 z-10 bg-slate-900 p-4 text-left font-semibold text-slate-300 border-b border-slate-700">
          Feature
        </th>
        {tools.map(tool => (
          <th class="p-4 text-center border-b border-slate-700 min-w-[200px]">
            <div class="space-y-2">
              <div class="font-bold text-white text-lg">{tool.name}</div>
              <div class="flex items-center justify-center gap-1">
                {Array.from({ length: 5 }).map((_, i) => (
                  <svg 
                    class={`w-4 h-4 ${i < Math.round(tool.rating / 2) ? 'text-brand' : 'text-slate-600'}`}
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <div class="text-xs text-brand font-semibold">{tool.pricing}</div>
            </div>
          </th>
        ))}
      </tr>
    </thead>
    <tbody>
      {features.map((feature, idx) => (
        <tr class={idx % 2 === 0 ? 'bg-slate-900/40' : 'bg-slate-800/20'}>
          <td class="sticky left-0 z-10 p-4 font-medium text-slate-300 border-b border-slate-800 bg-inherit">
            {feature}
          </td>
          {tools.map(tool => {
            const value = tool.features[feature];
            return (
              <td class="p-4 text-center border-b border-slate-800">
                {typeof value === 'boolean' ? (
                  value ? (
                    <svg class="w-6 h-6 mx-auto text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  ) : (
                    <svg class="w-6 h-6 mx-auto text-slate-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                  )
                ) : (
                  <span class="text-slate-300 text-sm">{value}</span>
                )}
              </td>
            );
          })}
        </tr>
      ))}
      <tr class="bg-slate-900">
        <td class="sticky left-0 z-10 p-4 bg-slate-900"></td>
        {tools.map(tool => (
          <td class="p-4 text-center">
            {tool.affiliate ? (
              <a
                href={tool.affiliate}
                target="_blank"
                rel="noopener noreferrer sponsored"
                class="inline-block w-full px-4 py-2.5 bg-brand hover:bg-brand/80 text-white font-semibold rounded-sm transition-colors"
                data-affiliate="true"
                data-tool={tool.name}
                data-link-type="comparison"
              >
                Try {tool.name} →
              </a>
            ) : (
              <a
                href={`/reviews/${tool.slug}`}
                class="inline-block w-full px-4 py-2.5 bg-slate-700 hover:bg-slate-600 text-white font-semibold rounded-sm transition-colors"
              >
                Read Review →
              </a>
            )}
          </td>
        ))}
      </tr>
    </tbody>
  </table>
</div>

<style>
  .comparison-table-wrapper {
    max-width: 100%;
  }

  .comparison-table {
    min-width: 800px;
  }

  @media (max-width: 768px) {
    .comparison-table th:first-child,
    .comparison-table td:first-child {
      position: sticky;
      left: 0;
      z-index: 10;
    }
  }
</style>

<script>
  document.querySelectorAll('[data-link-type="comparison"]').forEach(link => {
    link.addEventListener('click', () => {
      const toolName = link.getAttribute('data-tool');
      if (typeof gtag !== 'undefined' && toolName) {
        gtag('event', 'affiliate_click', {
          tool_name: toolName,
          link_type: 'comparison',
          position: 'comparison_table',
        });
      }
    });
  });
</script>
