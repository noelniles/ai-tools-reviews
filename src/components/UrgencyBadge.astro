---
import Icon from './Icon.astro'

interface Props {
  type?: 'limited-time' | 'popular' | 'trending' | 'new' | 'deal';
  text?: string;
  expiryDate?: string;
}

const { type = 'popular', text, expiryDate } = Astro.props;

const badges = {
  'limited-time': {
    iconName: 'lightning',
    color: 'bg-red-500/20 border-red-500/40 text-red-400',
    defaultText: 'Limited Time'
  },
  'popular': {
    iconName: 'trending-up',
    color: 'bg-orange-500/20 border-orange-500/40 text-orange-400',
    defaultText: 'Popular'
  },
  'trending': {
    iconName: 'activity',
    color: 'bg-green-500/20 border-green-500/40 text-green-400',
    defaultText: 'Trending'
  },
  'new': {
    iconName: 'star',
    color: 'bg-purple-500/20 border-purple-500/40 text-purple-400',
    defaultText: 'New'
  },
  'deal': {
    iconName: 'check-circle',
    color: 'bg-blue-500/20 border-blue-500/40 text-blue-400',
    defaultText: 'Special Deal'
  }
};

const badge = badges[type];
const displayText = text || badge.defaultText;
---

<div class={`urgency-badge inline-flex items-center gap-2 px-3 py-1.5 rounded-full border ${badge.color} font-semibold text-xs`}>
  <Icon name={badge.iconName} size="sm" />
  <span>{displayText}</span>
  {expiryDate && (
    <span class="countdown ml-1 opacity-80" data-expiry={expiryDate}>
    </span>
  )}
</div>

<style>
  @keyframes pulse-subtle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.85; }
  }
  
  .animate-pulse-subtle {
    animation: pulse-subtle 3s ease-in-out infinite;
  }
</style>

<script>
  function updateCountdowns() {
    document.querySelectorAll('.countdown').forEach((el) => {
      const expiry = el.getAttribute('data-expiry');
      if (!expiry) return;
      
      const expiryDate = new Date(expiry);
      const now = new Date();
      const diff = expiryDate.getTime() - now.getTime();
      
      if (diff <= 0) {
        el.textContent = 'Expired';
        return;
      }
      
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      
      if (days > 0) {
        el.textContent = `${days}d ${hours}h left`;
      } else {
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        el.textContent = `${hours}h ${minutes}m left`;
      }
    });
  }
  
  updateCountdowns();
  setInterval(updateCountdowns, 60000);
</script>
