---
import Icon from './Icon.astro'

interface Props {
  userCount?: string;
  reviewCount?: number;
  averageRating?: number;
  recentUsers?: string[];
}

const { 
  userCount = "10,000+", 
  reviewCount = 20, 
  averageRating = 8.5,
  recentUsers = []
} = Astro.props;
---

<div class="social-proof-banner my-8 p-6 rounded-lg bg-slate-900/40 border border-slate-800">
  <div class="grid md:grid-cols-3 gap-6">
    <div class="flex items-center gap-3">
      <Icon name="activity" size="lg" class="text-brand" />
      <div>
        <div class="text-2xl font-bold text-white">{userCount}</div>
        <div class="text-xs text-slate-400 uppercase tracking-wide">Monthly Visitors</div>
      </div>
    </div>
    
    <div class="flex items-center gap-3">
      <Icon name="book" size="lg" class="text-brand" />
      <div>
        <div class="text-2xl font-bold text-white">{reviewCount}</div>
        <div class="text-xs text-slate-400 uppercase tracking-wide">Reviews Published</div>
      </div>
    </div>
    
    <div class="flex items-center gap-3">
      <Icon name="star" size="lg" class="text-brand" />
      <div>
        <div class="text-2xl font-bold text-white">{averageRating}/10</div>
        <div class="text-xs text-slate-400 uppercase tracking-wide">Average Rating</div>
      </div>
    </div>
  </div>
  
  {recentUsers.length > 0 && (
    <div class="mt-6 pt-6 border-t border-slate-700 text-center">
      <p class="text-xs text-slate-400 mb-3">Recently viewed by professionals from:</p>
      <div class="flex flex-wrap justify-center gap-2">
        {recentUsers.map(user => (
          <span class="px-3 py-1 bg-slate-800/60 rounded-full text-xs text-slate-300">
            {user}
          </span>
        ))}
      </div>
    </div>
  )}
</div>
