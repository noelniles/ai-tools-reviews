---
import { ANALYTICS_CONFIG } from '../lib/analytics'
import EmailCapturePopup from '../components/EmailCapturePopup.astro'
import '../styles/base.css'

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  author?: string;
  keywords?: string[];
}

const { 
  title = 'AI Tools Reviews - Expert Reviews & Comparisons',
  description = 'Independent, expert reviews and benchmarks of AI tools. Compare ChatGPT, Claude, Midjourney, and more. Honest ratings, pricing, and recommendations.',
  image = '/og-image.png',
  type = 'website',
  publishedTime,
  author = 'AI Tools Reviews Team',
  keywords = ['AI tools', 'AI reviews', 'ChatGPT review', 'Claude review', 'AI comparison', 'LLM reviews']
} = Astro.props as Props;

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site || 'https://aitoolsreviews.com').href;
const ogImageURL = new URL(image, Astro.site || 'https://aitoolsreviews.com').href;
