---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import Nav from '../../components/Nav.astro'

export async function getStaticPaths() {
  const technical = await getCollection('technical')
  return technical.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }))
}

const { entry } = Astro.props
const { Content } = await entry.render()
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <!-- Prism.js for syntax highlighting -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" slot="head" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js" slot="head" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-python.min.js" slot="head" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-javascript.min.js" slot="head" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-typescript.min.js" slot="head" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-bash.min.js" slot="head" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-json.min.js" slot="head" defer></script>
  
  <Nav />
  
  <article class="max-w-4xl mx-auto">
    <!-- Header -->
    <header class="mb-12">
      <div class="flex items-center gap-2 text-sm text-slate-400 mb-4">
        <a href="/" class="hover:text-brand">Home</a>
        <span>→</span>
        <a href="/technical" class="hover:text-brand">Technical</a>
        <span>→</span>
        <span class="text-slate-300">{entry.data.title}</span>
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
        {entry.data.title}
      </h1>
      
      <p class="text-xl text-slate-300 mb-6">
        {entry.data.description}
      </p>
      
      <div class="flex flex-wrap items-center gap-4 text-sm text-slate-400">
        {entry.data.author && (
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            {entry.data.author}
          </div>
        )}
        
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          {new Date(entry.data.date).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </div>
        
        <div class="flex gap-2">
          {entry.data.tags.map((tag: string) => (
            <span class="px-2 py-1 bg-slate-800/50 border border-slate-700 rounded text-xs">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </header>
    
    <!-- Content -->
    <div class="prose prose-invert prose-slate max-w-none
                prose-headings:font-bold prose-headings:text-slate-50
                prose-h1:text-4xl md:prose-h1:text-5xl prose-h1:mb-8 prose-h1:mt-12 prose-h1:tracking-tight prose-h1:font-extrabold
                prose-h2:text-3xl md:prose-h2:text-4xl prose-h2:mt-16 prose-h2:mb-6 prose-h2:border-b-2 prose-h2:border-slate-700/60 prose-h2:pb-4 prose-h2:tracking-tight prose-h2:font-bold
                prose-h3:text-2xl md:prose-h3:text-3xl prose-h3:mt-12 prose-h3:mb-5 prose-h3:text-slate-100 prose-h3:tracking-tight prose-h3:font-bold
                prose-h4:text-xl md:prose-h4:text-2xl prose-h4:mt-10 prose-h4:mb-4 prose-h4:text-slate-200 prose-h4:font-semibold
                prose-p:text-slate-300 prose-p:leading-relaxed prose-p:mb-6 prose-p:text-base md:prose-p:text-lg
                prose-a:text-brand prose-a:no-underline hover:prose-a:underline prose-a:transition-colors
                prose-strong:text-slate-100 prose-strong:font-semibold
                prose-code:text-purple-400 prose-code:bg-slate-900/50 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:border prose-code:border-slate-800
                prose-pre:bg-slate-900/80 prose-pre:border prose-pre:border-slate-800 prose-pre:rounded-sm prose-pre:my-8 prose-pre:p-5 prose-pre:overflow-x-auto prose-pre:text-sm prose-pre:leading-6
                prose-ul:my-6 prose-ul:space-y-3 prose-ul:pl-6 prose-ul:list-disc
                prose-ol:my-6 prose-ol:space-y-3 prose-ol:pl-6 prose-ol:list-decimal
                prose-li:text-slate-300 prose-li:leading-relaxed prose-li:pl-2 prose-li:text-base md:prose-li:text-lg
                prose-li:marker:text-brand prose-li:marker:font-bold
                prose-blockquote:border-l-4 prose-blockquote:border-brand prose-blockquote:text-slate-400 prose-blockquote:my-8 prose-blockquote:py-2 prose-blockquote:pl-6 prose-blockquote:italic
                prose-img:rounded-sm prose-img:border prose-img:border-slate-800 prose-img:my-8">
      <Content />
    </div>
    
    <!-- Related Articles -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <h2 class="text-2xl font-bold mb-6">Related Articles</h2>
      <div class="grid md:grid-cols-2 gap-4">
        <a href="/technical/attention-mechanisms" class="p-6 bg-slate-900/40 border border-slate-800 rounded-sm hover:border-brand transition-colors">
          <h3 class="font-semibold mb-2">Attention Mechanisms</h3>
          <p class="text-sm text-slate-400">Visual guide to transformer attention</p>
        </a>
        <a href="/technical/long-context-architecture" class="p-6 bg-slate-900/40 border border-slate-800 rounded-sm hover:border-brand transition-colors">
          <h3 class="font-semibold mb-2">Long-Context Architecture</h3>
          <p class="text-sm text-slate-400">How models handle 100K+ tokens</p>
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Fix code block formatting */
  :global(.astro-code) {
    padding: 1rem !important;
    border-radius: 0.5rem !important;
    font-size: 0.875rem !important;
    line-height: 1.5 !important;
    margin: 1.25rem 0 !important;
  }
  
  /* Fix pre-formatted text blocks (ASCII diagrams) */
  :global(article pre) {
    font-size: 0.813rem !important;
    line-height: 1.4 !important;
    padding: 1rem !important;
    margin: 1.25rem 0 !important;
    white-space: pre !important;
    overflow-x: auto !important;
  }
  
  /* Reduce spacing in code blocks */
  :global(.astro-code code) {
    line-height: 1.5 !important;
  }
  
  /* Balanced spacing around headings */
  :global(article h2) {
    margin-top: 3rem !important;
    margin-bottom: 1.25rem !important;
  }
  
  :global(article h3) {
    margin-top: 2rem !important;
    margin-bottom: 1rem !important;
  }
  
  :global(article h4) {
    margin-top: 1.5rem !important;
    margin-bottom: 0.75rem !important;
  }
  
  /* Spacing between paragraphs */
  :global(article p) {
    margin-bottom: 1.25rem !important;
  }
  
  /* Fix paragraph spacing around code */
  :global(article p + pre),
  :global(article pre + p),
  :global(article h2 + pre),
  :global(article h3 + pre) {
    margin-top: 1.25rem !important;
  }
  
  /* Better list spacing */
  :global(article ul),
  :global(article ol) {
    margin: 1.25rem 0 !important;
    padding-left: 1.5rem !important;
  }
  
  :global(article li) {
    margin: 0.5rem 0 !important;
  }
  
  /* Add spacing after lists */
  :global(article ul + p),
  :global(article ol + p),
  :global(article ul + h2),
  :global(article ol + h2),
  :global(article ul + h3),
  :global(article ol + h3) {
    margin-top: 1.25rem !important;
  }
  
  /* Spacing after headings */
  :global(article h2 + p),
  :global(article h3 + p),
  :global(article h4 + p) {
    margin-top: 0.5rem !important;
  }
  
  /* Prism.js theme overrides for dark mode */
  :global(.token.comment),
  :global(.token.prolog),
  :global(.token.doctype),
  :global(.token.cdata) {
    color: #6b7280 !important;
    font-style: normal !important;
  }
  
  /* Style Python docstrings (triple-quoted strings) as comments */
  /* Override Prism's nested tokenization inside Python strings */
  :global(.language-python .token.string),
  :global(.language-python .token.string *),
  :global(.language-python .token.string .token) {
    color: #6b7280 !important;
    font-style: normal !important;
  }
  
  :global(.token.punctuation) {
    color: #94a3b8 !important;
  }
  
  :global(.token.property),
  :global(.token.tag),
  :global(.token.boolean),
  :global(.token.number),
  :global(.token.constant),
  :global(.token.symbol),
  :global(.token.deleted) {
    color: #f87171 !important;
  }
  
  :global(.token.selector),
  :global(.token.attr-name),
  :global(.token.string),
  :global(.token.char),
  :global(.token.builtin),
  :global(.token.inserted) {
    color: #34d399 !important;
  }
  
  :global(.token.operator),
  :global(.token.entity),
  :global(.token.url),
  :global(.language-css .token.string),
  :global(.style .token.string) {
    color: #60a5fa !important;
  }
  
  :global(.token.atrule),
  :global(.token.attr-value),
  :global(.token.keyword) {
    color: #a78bfa !important;
  }
  
  :global(.token.function),
  :global(.token.class-name) {
    color: #fbbf24 !important;
  }
  
  :global(.token.regex),
  :global(.token.important),
  :global(.token.variable) {
    color: #fb923c !important;
  }
</style>
