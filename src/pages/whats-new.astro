---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import { getCollection } from 'astro:content';

const allReviews = await getCollection('reviews');

// Sort by date (assuming you'd add a publishedDate field later)
const recentlyAdded = allReviews.slice(0, 6);
---

<BaseLayout 
  title="What's New in AI Tools" 
  description="Latest AI tool updates, new features, and pricing changes"
>
  <Nav />
  
  <div class="max-w-4xl mx-auto">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4">ğŸ†• What's New</h1>
      <p class="text-xl text-slate-400">
        Latest updates in the AI tools landscape
      </p>
    </header>

    <!-- January 2026 Updates -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
        <span>ğŸ“…</span>
        <span>January 2026 Updates</span>
      </h2>

      <div class="space-y-4">
        <!-- Update 1 -->
        <div class="bg-slate-900/40 border border-slate-800 rounded-xl p-6">
          <div class="flex items-start gap-4">
            <div class="text-3xl">ğŸ‰</div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="font-bold text-lg">Jasper AI Ends Affiliate Program</h3>
                <span class="px-2 py-1 bg-red-600/20 text-red-400 text-xs font-semibold rounded">IMPORTANT</span>
              </div>
              <p class="text-sm text-slate-400 mb-3">
                Jasper AI discontinued their affiliate program as of January 2026. Existing users unaffected.
              </p>
              <a href="/reviews/jasper-ai" class="text-brand text-sm font-semibold hover:underline">
                Read updated review â†’
              </a>
            </div>
          </div>
        </div>

        <!-- Update 2 -->
        <div class="bg-slate-900/40 border border-slate-800 rounded-xl p-6">
          <div class="flex items-start gap-4">
            <div class="text-3xl">ğŸš€</div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="font-bold text-lg">Claude 3 Opus Performance Boost</h3>
                <span class="px-2 py-1 bg-green-600/20 text-green-400 text-xs font-semibold rounded">NEW</span>
              </div>
              <p class="text-sm text-slate-400 mb-3">
                Anthropic released performance improvements for Claude 3 Opus, making it even faster for complex reasoning tasks.
              </p>
              <a href="/reviews/claude-3" class="text-brand text-sm font-semibold hover:underline">
                Check it out â†’
              </a>
            </div>
          </div>
        </div>

        <!-- Update 3 -->
        <div class="bg-slate-900/40 border border-slate-800 rounded-xl p-6">
          <div class="flex items-start gap-4">
            <div class="text-3xl">ğŸ’°</div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="font-bold text-lg">Midjourney Pricing Changes</h3>
                <span class="px-2 py-1 bg-yellow-600/20 text-yellow-400 text-xs font-semibold rounded">PRICE UPDATE</span>
              </div>
              <p class="text-sm text-slate-400 mb-3">
                Midjourney adjusted their pricing structure - basic plan now $12/mo instead of $10/mo.
              </p>
              <a href="/deals" class="text-brand text-sm font-semibold hover:underline">
                Compare prices â†’
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recently Added Reviews -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Recently Added Reviews</h2>
      
      <div class="grid md:grid-cols-2 gap-6">
        {recentlyAdded.map((review) => (
          <a 
            href={`/reviews/${review.slug}`}
            class="block bg-slate-900/40 border border-slate-800 rounded-xl p-6 hover:border-brand/50 transition-colors"
          >
            <div class="flex items-start justify-between mb-3">
              <h3 class="font-bold text-lg">{review.data.title}</h3>
              <span class="px-2 py-1 bg-brand/20 text-brand text-xs font-semibold rounded">NEW</span>
            </div>
            <p class="text-sm text-slate-400 mb-4">{review.data.description}</p>
            {review.data.rating && (
              <div class="text-yellow-500 text-sm">
                {'â­'.repeat(Math.round(review.data.rating))}
              </div>
            )}
          </a>
        ))}
      </div>
    </section>

    <!-- Subscribe CTA -->
    <div class="bg-gradient-to-r from-brand/20 to-purple-600/20 border border-brand/30 rounded-xl p-8 text-center">
      <h3 class="text-2xl font-bold mb-3">ğŸ“¬ Never Miss an Update</h3>
      <p class="text-slate-300 mb-6">
        Get weekly AI tool updates, new reviews, and exclusive deals
      </p>
      <form 
        action={import.meta.env.PUBLIC_FORMSPREE_NEWSLETTER_ID ? `https://formspree.io/f/${import.meta.env.PUBLIC_FORMSPREE_NEWSLETTER_ID}` : 'https://formspree.io/f/YOUR_FORM_ID'}
        method="POST"
        class="flex gap-3 max-w-md mx-auto"
      >
        <input 
          type="email" 
          name="email"
          placeholder="your@email.com" 
          required
          class="flex-1 px-4 py-3 bg-slate-900 border border-slate-800 rounded-lg focus:outline-none focus:border-brand"
        />
        <button 
          type="submit"
          class="px-6 py-3 bg-brand hover:bg-brand/80 rounded-lg font-semibold transition-colors"
        >
          Subscribe
        </button>
      </form>
    </div>
  </div>
</BaseLayout>
