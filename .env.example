# Environment Variables Configuration
# Copy this to .env and fill in your actual values
# NEVER commit the .env file to git!

# =====================================
# ANALYTICS
# =====================================

# Google Analytics 4
# Get your ID from https://analytics.google.com
# Format: G-XXXXXXXXXX
PUBLIC_GA_ID=

# Plausible Analytics (Privacy-focused alternative)
# Get from https://plausible.io
PUBLIC_PLAUSIBLE_DOMAIN=

# Fathom Analytics (Privacy-focused alternative)
# Get from https://usefathom.com
PUBLIC_FATHOM_SITE_ID=

# =====================================
# FORM SERVICES
# =====================================

# Formspree - For contact form and review submissions
# Get your form ID from https://formspree.io
PUBLIC_FORMSPREE_CONTACT_ID=
PUBLIC_FORMSPREE_REVIEW_ID=
PUBLIC_FORMSPREE_NEWSLETTER_ID=

# =====================================
# GOOGLE RECAPTCHA
# =====================================

# reCAPTCHA v3 for spam protection
# Get keys from https://www.google.com/recaptcha/admin
PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# =====================================
# AFFILIATE NETWORKS
# =====================================

# Impact.com - Your publisher ID
IMPACT_PUBLISHER_ID=

# CJ Affiliate - Your website ID
CJ_WEBSITE_ID=

# Amazon Associates - Your tracking ID
AMAZON_ASSOCIATE_ID=

# =====================================
# SOCIAL MEDIA
# =====================================

PUBLIC_TWITTER_HANDLE=
PUBLIC_GITHUB_URL=
PUBLIC_LINKEDIN_URL=

# =====================================
# SITE CONFIGURATION
# =====================================

PUBLIC_SITE_URL=https://yoursite.com
PUBLIC_SITE_NAME="AI Tools Reviews"
PUBLIC_CONTACT_EMAIL=contact@yoursite.com

# =====================================
# DEVELOPMENT
# =====================================

# Set to 'development' or 'production'
NODE_ENV=development
